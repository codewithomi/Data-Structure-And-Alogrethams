import java.util.Scanner;

public class Solution {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int count = 0;
        int x = scanner.nextInt();
        int y = scanner.nextInt();
        while (x != y) {
            if (x > y) {
                y /= 2;
            } else {
                y--;
            }
            count++;
        }
        System.out.println(count);
    }
}